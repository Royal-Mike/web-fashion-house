<script src="/js/signup.js"></script>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Sign Up</h5>
                    <form action="/acc/signupSubmit" method="post">
                        <div class="form-floating mb-3">
                            <input name="username" type="text" class="form-control" id="floatingUsername"
                                placeholder="Ex: something..." required />
                            <label for="floatingUsername">Username</label>
                            {{#if messages.error}}
                            <div style="color: red;">
                                {{messages.error}}
                            </div>
                            {{/if}}
                        </div>
                        <div class="form-floating mb-3">
                            <input name="email" type="text" class="form-control" id="floatingMail"
                                placeholder="name@example.com" required />
                            <label for="floatingMail">Email address</label>
                            {{#if messages.errorEmail}}
                            <div style="color: red;">
                                {{messages.error}}
                            </div>
                            {{/if}}
                        </div>

                        <div class="form-floating mb-3">
                            <input name="fullname" type="text" class="form-control" id="floatingFullname"
                                placeholder="Ex: something..." required />
                            <label for="floatingFullname">Full name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input name="dob" type="date" class="form-control" id="floatingDob" required />
                            <label for="floatingDob">Date of birth</label>
                        </div>

                        <div class="form-floating mb-3 input-control">
                            <input name="password" type="password" class="form-control" id="floatingPassword"
                                placeholder="Password" required />
                            <label for="floatingPassword">Password</label>
                            <div class="error" style="color: red;"></div>
                        </div>

                        <div class="form-floating mb-3 input-control">
                            <input name="re-password" type="password" class="form-control" id="floatingRePassword"
                                placeholder="re-Password" required />
                            <label for="floatingRePassword">Re-enter Password</label>
                            <div class="error" style="color: red;"></div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                                up</button>
                        </div>

                        <hr class="my-4" />

                        <div class="d-grid mb-2">
                            <button class="btn btn-google btn-login text-uppercase fw-bold" type="submit"><i
                                    class="fab fa-google me-2"></i>Sign up with Google</button>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-google btn-login text-uppercase fw-bold" type="submit"><i
                                    class="fab fa-facebook me-2"></i>Sign up with Facebook</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>