{{> js/signup}}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Đặt lại mật khẩu</h5>
                    <form action="/acc/resetPassword" method="post">
                        <div class="form-floating mb-3 input-control">
                            <input name="password" type="password" class="form-control" value="{{messages.pwValue}}" id="floatingPassword"
                                placeholder="Password" required />
                            <label for="floatingPassword">Mật khẩu</label>
                            <div class="error" style="color: red;"></div>
                        </div>

                        <div class="form-floating mb-3 input-control">
                            <input name="re-password" type="password" class="form-control" value="{{messages.pwValue}}" id="floatingRePassword"
                                placeholder="re-Password" required />
                            <label for="floatingRePassword">Nhập lại mật khẩu</label>
                            <div class="error" style="color: red;"></div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Xác nhận</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>