<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Quên mật khẩu</h5>
                    <form action="/acc/forgetSubmit" method="post">
                        <div class="form-floating mb-3">
                            <input name="username" type="text" class="form-control" id="floatingUsername"
                                placeholder="Ex: something..." value="{{messages.unValue}}" required/>
                            <label for="floatingUsername">Tên tài khoản</label>
                            {{#if messages.errorUser}}
                            <div style="color: red;">
                                {{messages.errorUser}}
                            </div>
                            {{/if}}
                        </div>
                        <div class="form-floating mb-3">
                            <input name="email" type="email" class="form-control" id="floatingMail"
                                placeholder="name@example.com" value="{{messages.emailValue}}" required />
                            <label for="floatingMail">Email</label>
                            {{#if messages.errorEmail}}
                            <div style="color: red;">
                                {{messages.errorEmail}}
                            </div>
                            {{/if}}
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Xác nhận</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>