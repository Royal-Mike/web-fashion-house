<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Thông tin tài khoản</h5>
                    <form action="/fb-submit" method="post">
                        <div class="form-floating mb-3">
                            <input name="email" type="text" class="form-control" id="floatingMail"
                                placeholder="name@example.com" required />
                            <label for="floatingMail">Email</label>
                            {{#if messages.errorEmail}}
                            <div style="color: red;">
                                {{messages.errorEmail}}
                            </div>
                            {{/if}}
                        </div>

                        <div class="form-floating mb-3">
                            <input name="fullname" type="text" class="form-control" id="floatingFullname"
                                placeholder="Ex: something..." value="{{messages.fnValue}}" required />
                            <label for="floatingFullname">Họ tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input name="dob" type="date" class="form-control" id="floatingDob"
                                value="{{messages.dobValue}}" required />
                            <label for="floatingDob">Ngày sinh</label>
                        </div>

                        <div class="d-grid mb-2">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Đăng
                                nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>