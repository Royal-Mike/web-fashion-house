    <style>
        .bg-linear-gradient {
            background: linear-gradient(to right, rgb(95, 236, 255), #0f03ae);
        }

        .show-text-overflow {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .card:hover {
            transform: scale(1.02);
            transition: 0.4s;
            border-color: red;
            border-width: .05rem;
        }
    </style>
