<div id="screen-info" class="container border screen-info py-2">
    <h4>My Profile</h4>
    <hr>
    <div class="input-group mb-3">
        <span class="input-group-text" style="width:15%" id="profile-username">Username</span>
        <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="profile-username">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" style="width:15%" id="profile-name">Name</span>
        <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="profile-name">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" style="width:15%" id="profile-email">Email</span>
        <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="profile-email">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" style="width:15%" id="profile-phone">Phone</span>
        <input type="text" class="form-control" placeholder="Phone" aria-label="Phone" aria-describedby="profile-phone">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" style="width:15%" id="profile-dob">DOB</span>
        <input type="text" class="form-control" placeholder="DOB" aria-label="DOB" aria-describedby="profile-dob">
    </div>
    <a class="btn btn-primary">Save</a>
</div>