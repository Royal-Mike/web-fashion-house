{{> js/admin/crud-category}}
<div id="screen-category" class="d-none container border screen-info py-2">
    <div class="d-flex align-items-center justify-content-between">
        <h4 class="m-0">Danh mục</h4>
        <a id="open-add-cat" class="btn btn-primary">+ Thêm</a>
    </div>
    <hr>
    <div id="edit-cat" class="container d-none">
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="cat-category">Tên danh mục</span>
            <input type="text" class="form-control" placeholder="Category" aria-label="Category" aria-describedby="cat-category">
        </div>
        <div class="d-flex mb-2">
            <a id="update-edit-cat" class="btn btn-primary btn-edit-cat me-2">Cập nhật</a>
            <a id="delete-edit-cat" class="btn btn-primary btn-edit-cat me-2">Xóa danh mục</a>
            <a id="add-cat" class="btn btn-primary me-2 d-none">Thêm danh mục</a>
            <a id="cancel-edit-cat" class="btn btn-primary">Thoát</a>
        </div>
    </div>
    <div id="cat-container" class="list-group list-group-container mb-3">
    </div>
    <nav id="cat-pagination" aria-label="Page Navigation">
        <ul class="pagination">
            <li class="page-item page-arrows">
                <a id="page-cat-prev" class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pages_c}}
                <li class="page_item">
                    <a id="page-cat-{{this}}" class="page-link page-link-num page-cat {{#if @first}} active {{/if}}">{{this}}</a>
                </li>
            {{/each}}
            <li class="page-item page-arrows">
                <a id="page-cat-next" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>