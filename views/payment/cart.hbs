<section class="h-100" style="background-color: #eee;">
    {{#if isEmptyCart}}
    <div class="card my-2" style="height:fit-content;">
        <div class="card-body text-end">
            <h3 class="text-center my-0">Your shopping cart is empty!</h3>
        </div>
    </div>
    {{else}}
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Giỏ hàng</h3>
                    <div>
                        <p class="mb-0"><span class="text-muted">Sắp xếp theo:</span> <a href="#!" class="text-body">Giá
                                <i class="fas fa-angle-down mt-1"></i></a></p>
                    </div>
                </div>

                {{#each currentCart}}
                <div class="card rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="row d-flex justify-content-between align-items-center">
                            <div class="col-md-2 col-lg-2 col-xl-2">
                                <img src={{images}} class="img-fluid rounded-3" alt="Cotton T-shirt">
                            </div>
                            <div class="col-md-3 col-lg-3 col-xl-3">
                                <p class="lead fw-normal mb-2"><strong>{{name}}</strong></p>
                                <p class="mb-0">Màu:<strong> {{color}}</strong></p>
                                <p class="mb-0">Giới tính: <strong>{{for}}</strong></p>
                                <p class="mb-0">Kích cỡ: <strong>{{size}}</strong></p>
                                <p class="mb-0">Thương hiệu: <strong>{{brand}}</strong></p>
                            </div>
                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                <button class="btn btn-link px-2" id="minusButton"
                                    onclick="decreaseQuantity({{id}}, '{{size}}')">
                                    <i class="fas fa-minus"></i>
                                </button>

                                <input id="form1" min="0" name="quantity" value={{quantity}} type="number"
                                    class="form-control form-control-sm" />

                                <button class="btn btn-link px-2" id="plusButton"
                                    onclick="increaseQuantity({{id}}, '{{size}}')">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                <h5 class="mb-0">{{total_price}} $</h5>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="card">
                    <div class="card-body" style="text-align: right;">
                        <button type="button" id="checkoutBtn" class="btn btn-warning btn-block btn-lg">Thanh
                            toán</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{/if}}
</section>

<script>
    $(() => {
        $("#checkoutBtn").on("click", function () {
            console.log("press checkout")
            window.location.href = `/checkout`;
        });
        increaseQuantity = (id, size) => {
            console.log(id, size);
            window.location.href = `/cart/increaseQuantity?id=${id}&size=${size}`;
        }
        decreaseQuantity = (id, size) => {
            window.location.href = `/cart/decreaseQuantity?id=${id}&size=${size}`;
        }
    })

</script>