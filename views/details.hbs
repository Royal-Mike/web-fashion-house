<script>
    $(() => {
        const params = new URLSearchParams(window.location.search);
        const id = params.get('id');
        $.ajax({
            url: `http://localhost:3000/details/getDescription?id=${id}`,
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#to-append-description').append(data.data);
            },
            error: function (error) {
                console.error(error);
            }
        });

        function addLeadingZero(value) {
            return value < 10 ? '0' + value : value;
        }

        $('#send-comment').on('click', function () {
            let k = $('.stars:checked').val();
            let val = $('#val-comment').val();
            const currentTime = new Date();
            const formattedTime = 
            currentTime.getFullYear() +
            '-' +
            addLeadingZero(currentTime.getMonth() + 1) +
            '-' +
            addLeadingZero(currentTime.getDate()) +
            ' ' +
            addLeadingZero(currentTime.getHours()) +
            ':' +
            addLeadingZero(currentTime.getMinutes()) +
            ':' +
            addLeadingZero(currentTime.getSeconds());

            dataJson = {
                numStars: k,
                commentVal: val,
                time: formattedTime,
                id: id
            }

            $.ajax({
                url: `http://localhost:3000/details/AddGetComment`,
                method: 'post',
                dataType: 'json',
                contentType: 'application/json',
                data: JSON.stringify(dataJson),
                success: function (data) {
                    window.location.href = `/details?id=${id}`;
                },
                error: function (error) {
                    console.error(error);
                }
            })
        });

        $('.col').on('click', function () {
            const product_id = $(this).data('id');
            window.location.href = `/details?id=${product_id}`;
        });

        $('#see-more-from-details').on('click', function () {
            let type = '{{cate}}';
            type = type.replace('&#x60;', '`');
            window.location.href = `/relating-products?type=${type}&page=1`;
        });
        // Add item to cart
        $('#addToCart').on('click', function () {
            let quantity = parseInt($("#input-num-of-products").val());
            let numProducts = `{{numProducts}}`;
            if (quantity > numProducts) {
                alert(`S·ªë h√†ng c√≤n c·ªßa s·∫£n ph·∫©m n√†y d∆∞·ªõi ${quantity}!`);
                return;
            }
            let id = '{{id}}';
            const sizeButtons = document.getElementsByName("vbtn-radio");
            let selectedSize;
            for (const sizeButton of sizeButtons) {
                if (sizeButton.checked) {
                    selectedSize = sizeButton.value;
                }
            }
            alert(`S·∫£n ph·∫©m \"${'{{name}}'.trim()}\" ƒë√£ ƒë∆∞·ª£c th√™m v√†o gi·ªè h√†ng c·ªßa b·∫°n!`);
            window.location.href = `/cart/addToCart?id=${id}&size=${selectedSize}&quantity=${quantity}`;
        });

        increaseQuantity = () => {
            let quantity = parseInt($("#input-num-of-products").val());
            $("#input-num-of-products").val(quantity + 1);
            return;
        }

        decreaseQuantity = () => {
            let quantity = parseInt($("#input-num-of-products").val());
            if (quantity > 1) {
                $("#input-num-of-products").val(quantity - 1);
            }
            return;
        }
    });
</script>